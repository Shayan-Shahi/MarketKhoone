
@model List<List<MarketKhoone.ViewModels.Categories.ShowCategoryForCreateProductViewModel>>


@*این کانتر رو تعریف کردیم
تا  بتوانیم از یکی از موارد سلکت شده، اکتیو را بگیریم
یعنی رنگ آبی رو بگیریم*@
@{
    var counter = 1;
}

@foreach (var categories in Model)
{
    <div class="list-group col-4" category-row="@(counter++)">
        @foreach (var category in categories)
        {
            <button category-id="@category.Id"
                    has-child="@category.HasChild.ToString().ToLower()"
                    type="button" class="list-group-item list-group-item-action d-flex justify-content-between">
                @category.Title
                @if (category.HasChild)
                {
                    <i class="bi bi-chevron-left"></i>
                }
            </button>
        }
    </div>
}