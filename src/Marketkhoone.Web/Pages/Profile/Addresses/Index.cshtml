@page
@model Marketkhoone.Web.Pages.Profile.Adresses.IndexModel
@{
    ViewData["Title"] = "آدرس ها";
}

<div class="col-lg-9 col-md-9 col-xs-12 pr">
    <div class="profile-content">
        <div class="profile-stats">
            <div class="profile-address">
                <div class="box-header">
                    <span class="box-title">نشانی ها</span>
                    <div class="d-grid d-lg-block mb-2">
                        <a asp-page-handler="Add" class="btn btn-outline-primary show-modal-form-button">
                            افزودن آدرس
                        </a>
                       
                    </div>
                </div>
                @foreach (var address in Model.Addresses)
                {
                    <div class="profile-address-item">
                        <div class="profile-address-item-top">
                            <span class="fw-bold">آدرس کامل: </span>
                            <div class="profile-address-item-title">@address.AddressLine</div>
                            <div class="ui-more delete-address-in-profile">
                                <form method="post" asp-page-handler="DeleteAddress" class="public-ajax-form"
                                      functionNameToCallInTheEnd="deleteAddressFunction">
                                    <input type="hidden" name="id" value="@address.Id"/>
                                    <button class="btn-remove-address btn btn-danger" type="button">حذف</button>
                                </form>

                                <form method="post" asp-page-handler="EditAddress" class="public-ajax-form"
                                      functionNameToCallInTheEnd="EditAddressFunction">
                                    <input type="hidden" name="id" value="@address.Id"/>
                                    <button class="btn-edit-address btn btn-success mt-2" type="button">ویرایش</button>
                                </form>
                                
                            </div>
                        </div>

                        <div class="profile-address-content">
                            <ul class="profile-address-info">
                                <li>
                                    <div class="profile-address-info-item location">
                                        <i class="mdi mdi-map-outline"></i>
                                        <span class="fw-bold">نام گیرنده: </span>
                                        @address.FullName
                                    </div>
                                </li>
                                <li>
                                    <div class="profile-address-info-item location">
                                        <i class="mdi mdi-email-outline"></i>
                                        <span class="fw-bold">کد پستی: </span>
                                        @address.Pob
                                    </div>
                                </li>
                                <li>
                                    <div class="profile-address-info-item location">
                                        <i class="mdi mdi-phone"></i>
                                        <span class="fw-bold">شماره تماس: </span>
                                        @address.PhoneNumber
                                    </div>
                                </li>
                               
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/select2/js/i18n/fa.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
}
@section CustomScripts
    {
    <script src="~/Pages/Profile/Addresses/Index.cshtml.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.rtl.min.css" />
}